{
    "version": "1.0.2",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "jsx": "react",
        "preserveConstEnums": true,
        "declaration": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./types",
        "moduleResolution": "node"
    },
    "filesGlob": [
        "./src/**/*.ts"
    ]
}
